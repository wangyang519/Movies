<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.GoupiaoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@mipmap/mvlist2">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yingyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:text="影城"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/dizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:text="地址"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/yingpianmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:text="影片名"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />

            <LinearLayout

                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:text="10-20"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/mStartTime"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_16"
                    android:text="strattime"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_0_5"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_16"
                    android:text=":"
                    />
                <TextView
                    android:id="@+id/mStopTime"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_0_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_16"
                    android:text="mStopTime"
                    />

                <TextView
                    android:id="@+id/MVname"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_16"
                    />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="4"
        >
        <TextView
            android:id="@+id/mSelect"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llr"
        android:layout_width="@dimen/dp_312"
        android:layout_gravity="center"
        android:layout_height="@dimen/dp_73"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_34"
            android:textColor="#333333"
            android:text="合计:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:textColor="#666666"
            android:text="￥"
            />
        <TextView
            android:id="@+id/mPayMoney_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_22"
            android:textColor="#b11450"
            android:textSize="@dimen/sp_36"
            android:text="00.0"
            />

        <ImageView
            android:id="@+id/myYesPay"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/cinamequeding"
            />
        <ImageView
            android:id="@+id/myNoPay"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:src="@mipmap/cinemabuxuan"
            />
    </LinearLayout>

</LinearLayout>