<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_130"
        android:layout_marginRight="@dimen/dp_30">

        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/log_icon_phone_default" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toRightOf="@id/image_phone"
            android:background="@null"
            android:hint="手机号"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18sp" />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/image_phone"
            android:layout_marginTop="@dimen/dp_8"
            android:background="#fff" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_25"
            android:layout_below="@id/v1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/register_icon_lock_default" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_toRightOf="@id/lock"
            android:background="@null"
            android:hint="登录密码"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_13"
            android:layout_below="@id/v1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_40"
            android:src="@mipmap/log_icon_eye_default" />

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/lock"
            android:layout_marginTop="@dimen/dp_8"
            android:background="#fff" />

        <CheckBox
            android:id="@+id/remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v2"
            android:layout_marginTop="@dimen/dp_10"
            android:text="记住密码"
            android:textColor="#fff" />

        <CheckBox
            android:id="@+id/quickLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/remember"
            android:text="自动登录"
            android:textColor="#fff" />


        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_16"
            android:text="快速注册"
            android:textColor="#fff" />
    </RelativeLayout>


    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="218dp"
        android:background="@drawable/login"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="18sp" />

    <View
        android:id="@+id/v3"
        android:layout_width="@dimen/dp_92"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_142"
        android:background="#fff" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_135"
        android:layout_toRightOf="@id/v3"
        android:text="第三方账号快速登录"
        android:textColor="#fff" />

    <View
        android:id="@+id/v4"
        android:layout_width="@dimen/dp_92"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_142"
        android:layout_toRightOf="@id/text"
        android:background="#fff" />

    <ImageView
        android:id="@+id/WeChart"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_72"
        android:src="@mipmap/log_icon_weixin_default" />
</RelativeLayout>