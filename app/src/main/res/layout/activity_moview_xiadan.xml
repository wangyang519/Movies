<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MoviewXiadan">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="ssssssssss"
            android:id="@+id/xiadan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_40"
            android:id="@+id/xiadan_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ticket_image"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/com_icon_navigation_default"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_30"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ticket_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            />
        <TextView
            android:id="@+id/ticket_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/dp_10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_142"
            android:background="@mipmap/mvlist2"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ticket_sdv_image"
                android:layout_width="@dimen/dp_103"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_height="@dimen/dp_130" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ticket_txt_name"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_20"
                    android:textColor="#fff"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ticket_txt_movieTypes"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ticket_txt_director"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#fff"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ticket_txt_duration"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#fff"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ticket_txt_placeOrigin"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#fff"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/ticket_recy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/xaidan_image_back"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:background="@mipmap/return_defaultone"
            android:layout_marginLeft="@dimen/dp_24"
         />
    </LinearLayout>

</RelativeLayout>