<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:background="@mipmap/bitmap">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_140"
        android:layout_marginRight="@dimen/dp_30">

        <ImageView
            android:id="@+id/image_name"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/register_icon_name_default" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/image_name"
            android:background="@null"
            android:hint="昵称"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/image_name"
            android:layout_marginTop="@dimen/dp_8"
            android:background="#fff" />

        <ImageView
            android:id="@+id/image_sex"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/v1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/register_icon_sex_default" />

        <EditText
            android:id="@+id/sex"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/image_sex"
            android:background="@null"
            android:hint="性别"
            android:textColorHint="#fff"
            android:textSize="16sp" />

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/image_sex"
            android:layout_marginTop="@dimen/dp_8"
            android:background="#fff" />

        <ImageView
            android:id="@+id/image_date"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/v2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/register_icon_date_default" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v2"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/image_date"
            android:background="@null"
            android:hint="出生日期"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/image_date"
            android:layout_marginTop="@dimen/dp_8"
            android:background="#fff" />

        <ImageView
        android:id="@+id/image_phone"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_23"
        android:layout_below="@id/v3"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/register_icon_phone_default" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v3"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/image_phone"
            android:background="@null"
            android:hint="手机号"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/image_phone"
            android:layout_marginTop="@dimen/dp_8"
            android:background="#fff" />

        <ImageView
            android:id="@+id/image_email"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/v4"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/register_icon_mail_default" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v4"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/image_email"
            android:background="@null"
            android:hint="邮箱"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <View
            android:id="@+id/v5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/image_email"
            android:layout_marginTop="@dimen/dp_8"
            android:background="#fff" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/v5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/register_icon_lock_default" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v5"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/lock"
            android:background="@null"
            android:hint="登录密码"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <View
            android:id="@+id/v6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/lock"
            android:layout_marginTop="@dimen/dp_8"
            android:background="#fff" />

        <ImageView
            android:id="@+id/lock2"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/v6"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/register_icon_lock_default" />

        <EditText
            android:id="@+id/pwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v6"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/lock2"
            android:background="@null"
            android:hint="确认密码"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/lock2"
            android:layout_marginTop="@dimen/dp_8"
            android:background="#fff" />
    </RelativeLayout>


    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_95"
        android:background="@drawable/login"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="18sp" />

</RelativeLayout>