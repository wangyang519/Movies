<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/miv"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/cinemaloc"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/mdingwei"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_toRightOf="@id/miv"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_45"
            android:text="定位中......"/>

        <LinearLayout
            android:id="@+id/mlinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-200dp">

            <ImageView
                android:id="@+id/sou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0_5"
                android:layout_marginBottom="@dimen/dp_0_5"
                android:layout_marginLeft="@dimen/dp_0_5"
                android:paddingLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/homesearch"/>
            <EditText
                android:id="@+id/et_sou"
                android:layout_width="@dimen/dp_150"
                android:background="@null"
                android:textSize="10sp"
                android:hint="CGV影城"
                android:textColorHint="#fff"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_sou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginRight="@dimen/dp_24"
                android:text="搜索"/>
        </LinearLayout>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/zhong_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal">
        <RadioButton
            android:id="@+id/btn_tton1"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:checked="true"
            android:button="@null"
            android:text="推荐影院"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_16"
 />
        <RadioButton
            android:id="@+id/btn_tton2"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:button="@null"
            android:text="附近影院"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp_16"
 />
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_zhong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v4.view.ViewPager>


</LinearLayout>
