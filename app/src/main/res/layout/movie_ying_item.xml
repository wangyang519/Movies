<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_139">
        <ImageView
            android:layout_marginTop="@dimen/dp_16"
            android:layout_centerHorizontal="true"
            android:background="@drawable/moivebackgroundtwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_123" />
        <ImageView
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_129"
            android:id="@+id/movie_imageview_moview"
            />

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/movie_nmae_name"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/movie_imageview_moview"
            android:textSize="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈"
            />
        <CheckBox
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_280"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:button="@null"
            android:background="@drawable/selectwww"/> />

        <TextView

            android:id="@+id/movie_jianjie_moview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_130"
            android:paddingTop="@dimen/dp_60"
            android:text="简介"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>





</LinearLayout>
