<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:background="@drawable/bejing"
        android:layout_marginTop="@dimen/dp_120"
        android:id="@+id/twopopularsdvone"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:background="@drawable/com_icon_down_default"
            android:id="@+id/Pop_down"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48" />

    </RelativeLayout>
    <ImageView
        android:layout_marginTop="@dimen/dp_90"
        android:id="@+id/dialog_detalis_sdvone"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="@dimen/dp_111"
        android:layout_height="@dimen/dp_149" />
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@+id/dialog_detalis_sdvone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_detalis_leixing"
            android:layout_marginTop="@dimen/dp_140"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            android:text="类型"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_detalis_daoyan"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/dialog_detalis_leixing"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            android:text="导演"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_detalis_shichang"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/dialog_detalis_daoyan"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            android:text="时长"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_detalis_chandi"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/dialog_detalis_shichang"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            android:text="产地"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/one"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_below="@+id/dialog_detalis_sdvone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/jianjie"
            android:text="剧情简介"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/lineone"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_below="@+id/jianjie"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"/>

        <TextView
            android:id="@+id/plot"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            android:text="呵呵呵呵呵呵呵呵呵呵"
            android:layout_below="@+id/lineone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/two"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_below="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/yanzhi"
            android:text="演职人员"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/linetwo"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_below="@+id/yanzhi"

            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"/>

        <Button
            android:id="@+id/buttonname"
            android:text="演员名字"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/yanshe"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12"
            android:layout_below="@+id/linetwo"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_32" />

        <Button
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_32"
            android:layout_alignTop="@+id/buttonname"
            android:background="@drawable/yanshe"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="饰演角色"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/three"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_below="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/weizhi"
            android:text="未知"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="饰"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:text="未知"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:background="#f2f2f2"
            android:layout_below="@+id/weizhi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>

    </RelativeLayout>

</RelativeLayout>
