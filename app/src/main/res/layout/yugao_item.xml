<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_120"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bejing"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_yuegao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_20"
                android:text="预告片"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />
            <ImageView
                android:layout_below="@+id/text_yuegao"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_width="@dimen/dp_30"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/yugao_dowm"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_18"
                android:background="@drawable/com_icon_down_default"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48" />
        </RelativeLayout>
        <VideoView
            android:id="@+id/yudao_video"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_width="@dimen/dp_321"
            android:layout_height="@dimen/dp_153" />
    </LinearLayout>
</RelativeLayout>
